@model DealDouble.Entities.Auction
<div class="modal-header">
    <h1 class="modal-title">  Are you sure you want to delete this auction?</h1>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-footer">
    <form id="DeleteForm" method="post">
        <input name="ID" value=@Model.ID />
        <button id="saveButton" type="button" class="btn btn-success">
            Yes
        </button>
    </form>

    <form method="get" action="/Auctions/">
        <button class="btn btn-secondary" data-dismiss="modal">
            NO
        </button>
    </form>
</div>


<script>
    $("#saveButton").click(function () {
        $.ajax({
            url: "@Url.Action("Delete","Auctions")",
            method: "post",
            data: $("#DeleteForm").serialize()
        }).done(function (response) {
           // $('#formModel').model('toggle');
           $("#listingArea").html(response);

        })
            .fall(function () { });



    });
</script>

